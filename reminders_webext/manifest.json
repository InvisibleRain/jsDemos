{
  "manifest_version": 2,
  "name": "Reminders",
  "version": "2.0",
  "description": "Extensions that set reminders and shows notifications",
  "homepage_url": "https://github.com/tsl143/jsDemos",
  "icons": {
    "32": "icons/logo_32.png",
    "64": "icons/logo_64.png",
    "128": "icons/logo_128.png"
  },
  "permissions": [
    "alarms",
    "tabs",
    "notifications",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icons/icon_32.png",
    "default_title": "Remind me",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "bg.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{7dc17ae2-a65f-4e62-b639-ad5bb7d6bdbb}"
    }
  }
}
